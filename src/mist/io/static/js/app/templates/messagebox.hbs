<div class="md-modal large-popup md-effect-1" id="message-box-popup">
    <div class="md-content">
        <div class="md-title">
            <h1>{{Mist.notificationController.messageBox.options.title}}</h1>

            <a href="javascript:void(0)" class="close" {{action "backClicked" target=view}}>&#10005;</a>
        </div>
        <div class="md-body">
            <!--
                Paragraphs
            -->

            {{#each Mist.notificationController.messageBox.options.paragraphs as |p|}}
                <p>{{p}}</p>
            {{/each}}

            <!--
                Command
            -->

            {{#if Mist.notificationController.messageBox.options.command}}
                <p id="message-cmd">
                    {{Mist.notificationController.messageBox.options.command}}
                </p>
            {{/if}}

            <!--
                Postscript
            -->

            {{#if Mist.notificationController.messageBox.options.ps}}
                <p id="message-ps">
                    {{Mist.notificationController.messageBox.options.ps}}
                </p>
            {{/if}}

            <!--
                OK Button
            -->

            <a class="ui-btn ui-btn-a ui-corner-all"
                {{action "okClicked" target=view}}>OK</a>
        </div>
    </div>
</div>

<div class="md-overlay"></div>
