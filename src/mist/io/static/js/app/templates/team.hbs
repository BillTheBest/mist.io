<div id="single-team-page" data-role="page" class="ui-page-active">

    <div data-role="header" data-theme="a">
        <!-- Page header -->
        <div class="ui-header ui-bar-a">
            <div class="header-grid">
                <div class="ui-grid-b">
                    <div class="ui-block-a">
                        {{#link-to 'teams' class="responsive-button ui-btn icon-prev ui-alt-icon ui-caps
                        ui-btn-icon-left ui-corner-all nav-back"}}<span>Teams</span>{{/link-to}}
                    </div>

                    <div class="ui-block-b">
                        <h1 class="ui-title">{{view.team.name}}</h1>
                    </div>

                    <div class="ui-block-c">
                        <div class="user-menu">
                            {{component "user-menu"}}
                        </div>
                    </div>
                </div><!-- /grid-b -->
            </div>
        </div>
    </div>

    <div role="main" class="ui-content" data-theme="c">
        <div id="member-list-container" class="ui-shadow">
            <div class="ui-grid-a members-header">
                <div class="ui-block-a">
                    {{#if view.team.members.length}}
                        <a id="select-members-btn" class="responsive-button ui-btn ui-btn-add ui-btn-d icon-down
                                ui-btn-icon-right" {{action "selectClicked" target=view}}></a>
                    {{/if}}
                </div>
                <div class="ui-block-b">

                </div>
            </div><!-- /grid-b -->

            {{#if view.team.members.length}}
                <div class="member-search-container">
                    {{#if Mist.teamsController.searchTerm}}
                        <span {{action "clearClicked" target=view}} class="icon-xx"></span>
                    {{else}}
                        <span class="icon-search"></span>
                    {{/if}}
                    {{input value=Mist.teamsController.searchTerm placeholder="Filter members" class="team-search"}}
                </div>

                <ul id="member-list" data-role="listview"
                    data-inset="true"
                    class="checkbox-list">
                    {{#each view.team.members as |member|}}
                        {{component "member-list-item" member=member class="checkbox-link"}}
                    {{/each}}
                </ul>
            {{/if}}
        </div>

        <div class="mid-padding"></div>
    </div>

    {{component "dialog-popup"}}

    <div class="dual-action-footer" data-role="footer" data-theme="b">
        <div class="ui-grid-a">
            <div class="ui-block-a">
                <a class="ui-btn ui-btn-icon-right ui-caps icon-edit"
                    {{action "renameClicked" target=view}}>Rename</a>
            </div>
            <div class="ui-block-b">
                <a class="ui-btn ui-btn-icon-right ui-caps icon-xx"
                    {{action "deleteClicked" target=view}}>Delete</a>
            </div>
        </div>
    </div>

</div>
