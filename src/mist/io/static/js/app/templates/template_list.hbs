<div id="template-list-page" data-role="page" class="ui-page-active">

    <div data-role="header" data-theme="a">
        <!-- Page header -->
        <div class="ui-header ui-bar-a">
            <div class="header-grid">
                <div class="ui-grid-b">
                    <div class="ui-block-a">
                        {{#link-to 'index' class="responsive-button ui-btn icon-prev ui-alt-icon ui-caps
                        ui-btn-icon-left ui-corner-all nav-back"}}<span>Home</span>{{/link-to}}
                    </div>

                    <div class="ui-block-b">
                        <h1 class="ui-title">Templates</h1>
                    </div>

                    <div class="ui-block-c">
                        <div class="user-menu">
                            {{component "user-menu"}}
                        </div>
                    </div>
                </div><!-- /grid-b -->
            </div>
        </div>
    </div>

    <div role="main" class="ui-content" data-theme="c">
        <div id="template-list-container" class="ui-shadow">
            <div class="ui-grid-a templates-header">
                <div class="ui-block-a">
                    {{#if Mist.templatesController.model.length}}
                        <a id="select-templates-btn" class="responsive-button ui-btn ui-btn-add ui-btn-d icon-down
                                ui-btn-icon-right" {{action "selectClicked" target=view}}></a>
                    {{/if}}
                </div>
                <div class="ui-block-b">
                    {{component "template-add"}}
                </div>
            </div><!-- /grid-b -->

            {{#if Mist.templatesController.model.length}}
                <div class="template-search-container">
                    {{#if Mist.templatesController.searchTerm}}
                        <span {{action "clearClicked" target=view}} class="icon-xx"></span>
                    {{else}}
                        <span class="icon-search"></span>
                    {{/if}}
                    {{input value=Mist.templatesController.searchTerm placeholder="Filter templates" class="template-search"}}
                </div>

                <ul id="template-list" data-role="listview"
                    data-inset="true"
                    class="checkbox-list">
                    {{#each Mist.templatesController.sortedTemplates as |template|}}
                        {{component "template-list-item" template=template class="checkbox-link"}}
                    {{/each}}
                </ul>
            {{/if}}
        </div>

        <div class="mid-padding"></div>
    </div>

    {{component "dialog-popup"}}

    {{component "template-edit"}}

    <div id="select-templates-popup" class="ui-mini" data-role="popup" data-transition="flip" data-position-to="#select-templates-btn">
        <div class="ui-header ui-caps">Sort by</div>
        <ul data-role="listview">
            <li>
                <a class="ui-btn ui-btn-icon-left {{if Mist.templatesController.sortByName 'icon-check'}}" {{action "sortBy" "name" target=view}}>Name</a>
            </li>
            <li>
                <a class="ui-btn ui-btn-icon-left {{if Mist.templatesController.sortByType 'icon-check'}}" {{action "sortBy" "type" target=view}}>Type</a>
            </li>
        </ul>

        <div class="ui-header ui-caps">Select</div>
        <ul data-role='listview'>
            <li data-icon="false">
                <a {{action "selectionModeClicked" true target=view}}>All</a>
            </li>
            <li data-icon="false">
                <a {{action "selectionModeClicked" false target=view}}>None</a>
            </li>
        </ul>
    </div>

    <div class="dual-action-footer" data-role="footer" data-theme="b">
        <div class="ui-grid-a">
            <div class="{{if view.canRename '' 'ui-state-disabled'}} ui-block-a">
                <a class="ui-btn ui-btn-icon-right ui-caps icon-edit"
                    {{action "editClicked" target=view}}>Edit</a>
            </div>
            <div class="{{if view.canDelete '' 'ui-state-disabled'}} ui-block-b">
                <a class="ui-btn ui-btn-icon-right ui-caps icon-xx"
                    {{action "deleteClicked" target=view}}>Delete</a>
            </div>
        </div>
    </div>
</div>
